page{
  background: #f4f4f4;
  min-height: 100%;
  font-size: 28rpx;
  color: #353535
}
.total-wrap{
  margin-top: 16rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 40rpx;
  background: #fff;
  box-sizing: border-box;
}
.total-wrap .num{
  font-weight: bold
}
.evaluation-list .item{
  background: #fff;
  padding: 32rpx 40rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-top: 16rpx;
}

.evaluation-list .item:last-child {
  margin-bottom: 16rpx;
}

.evaluation-list .item .head-wrap{
  display: flex;
  margin-bottom: 8rpx;
}
.evaluation-list .item .head-wrap .head-img{
  height: 70rpx;
  width: 70rpx;
  border-radius: 35rpx;
  margin-right: 18rpx;
}
.evaluation-list .item .info{
  color: #4d4d4d;
}
.evaluation-list .item .star-wrap .star{
  float: left;
  margin-right: 4rpx;
  height: 26rpx;
  width: 26rpx;
}
.evaluation-list .item .time-wrap{
  color: #888;
  font-size: 24rpx;
  margin-bottom: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.evaluation-list .item .time-wrap .time{
  margin-right: 80rpx;
}
.evaluation-list .item .text-wrap{
  color: #353535;
  margin-bottom: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.evaluation-list .item .imgs-wrap{
  overflow: hidden;
}
.evaluation-list .item .imgs-wrap .img-item{
  height: 220rpx;
  width: 220rpx;
  margin-top: 8rpx;
  margin-right: 4rpx;
}
.evaluation-list .item .imgs-wrap .img-item:nth-child(3n+0){
  margin-right: 0
}