/* pages/we/vip_club/privilege_list/privilege_list.wxss */
page {
  background: #f4f4f4;
  font-family: "Microsoft YaHei";
  box-sizing: border-box;
  height: 100%;
}
.vip_Content {
  position: fixed;
  width: 100%;
  z-index: 100;
  background: #fff;
  top: 0;
  padding: 14rpx 0;
}
/*tab*/
.vip-tab {
  width: 100%;
  text-align: center;
  background: #fff;
  font-size: 10pt;
  color: #4dab6d;
  box-sizing: border-box;
  overflow-x: auto;
  display: -webkit-box;
  white-space: nowrap;
  padding: 0;
  -webkit-overflow-scrolling: touch;
}
.vip-tab-list {
  box-sizing: border-box;
  padding-right: 40rpx;
  color: #353535;
  text-align: center;
  display: inline-block;
}

.vip-tab-list:first-child {
  padding-left: 40rpx;
}

.vip-tab-list view {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  padding: 10rpx;
  border-radius: 50%;
  box-sizing: border-box;
  margin: 0 auto;
}

.vip-tab-list view image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  margin: 0 auto;
}

.vip-tab-list text {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 6rpx;
  display: inline-block;
}
.clear{
  clear: both;
  padding: 1rpx;
}

.on {
  border: 0
}

.on view {
  background: #C3A47D;
}

.on text {
  color: #C3A47D;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  padding-top: 187rpx;
  box-sizing: border-box;
  padding-bottom: 110rpx;
}

/*特权介绍*/
scroll-view {
  width: 710rpx;
  background: #fff;
  margin: 0 auto;
  padding: 32rpx 0rpx;
  box-sizing: border-box;
  height: 100%;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.title {
  color: #CAA148;
  font-size: 32rpx;
  font-weight: 900;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 40rpx;
}

.title text {
  border-bottom: 2px solid #CAA148;
  display: inline-block;
  margin-bottom: 8rpx;
}

.note {
  padding: 0 40rpx;  
}

.two_title {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #CAA148;
  height: 40rpx;
  line-height: 40rpx;
}

.two_note {
  display: flex;
  font-size: 26rpx;
  color: #353535;
  margin-top: 8rpx;
  align-items: baseline;
}

.two_note .num {
  width: 26rpx;
  height: 26rpx;
  text-align: center;
  line-height: 26rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius: 50%;
  background: #CAA148;
  margin-right: 8rpx;
}

.two_note .text {
  flex: 1
}

/* 开通会员按钮 */
.bottom_btn {
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #CAA148;
  color: #fff;
  font-size: 36rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}