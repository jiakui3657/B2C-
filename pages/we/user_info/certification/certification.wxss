/* pages/we/certification/certification.wxss */
page{
  height: 100%
}

.container {
  height: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
  padding: 0;
}

.content {
  padding: 0 20rpx;
  background: #fff;
}

.list{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  border-bottom: 1px solid #E8E6E6;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.list input{
  height: 100rpx;
  color: #353535;
}

.placeholder {
  color: #D2D2D2;
  font-size: 32rpx;
}

.list-l {
  width: 130rpx;
  color: #353535;
  margin-right: 90rpx;
}

.list-r {
  flex: 1;
  position: relative;
}

.code {
  display: flex;
  justify-content: space-between
}

.code text {
  display: inline-block;
  width: 186rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 70rpx;
  background: #f4f4f4;
  color: #3E3D3D;
  text-align: center;
  font-size: 28rpx;
  margin-top: 26rpx;
}

.list:last-child {
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 0;
}

.list:last-child input {
  height: 120rpx;
  line-height: 120rpx;
  flex: 1;
}

button {
  width: 700rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  background: #FF474C;
  border-radius: 94rpx;
  margin: 80rpx auto;
  border: 0;
  padding: 0;
}
