/* pages/we/integral/integral.wxss */
page {
  height: 100%;
  background: #f4f4f4;
  overflow: hidden;
}

/* header */
.header {
  height: 240rpx;
  position: relative;
  overflow: hidden;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.header image {
  width: 100%;
  height: 100%;
  background: #000;
}

.integral {
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
  padding-top: 46rpx;
  box-sizing: border-box;
}

.integral view {
  color: #E1B75C;
  font-size: 48rpx;
  height: 64rpx;
  line-height: 64rpx;
}

.integral text {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
}

.container {
  position: absolute;
  height: 100%;
  width: 710rpx;
  top: 0rpx;
  left: 20rpx;
  padding: 0;
  padding-bottom: 20rpx;
  padding-top: 186rpx;
  box-sizing: border-box;
  background: transparent;
  display: flex;
  flex-direction: column;
}

/* 积分通知 */
.integral_notice {
  background: #fff;
  padding: 20rpx 20rpx 20rpx 32rpx;
  display: flex;
  align-items: center;
  height: 120rpx;
  box-sizing: border-box;
}

.integral_notice image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 32rpx;
  padding: 8rpx 32rpx 8rpx 0;
  border-right: 1px solid #BBBBBB;
}

.integral_notice_r {
  flex: 1;
  margin-left: 32rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #353535;
  display: flex;
  align-items: center;
}

/* 积分明细 */
.integral_detail {
  background: #fff;
  flex: 1;
  display: flex;
  border-radius: 0 0 10rpx 10rpx;
}

.integral_detail_title {
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 900;
  padding: 0 20rpx;
  border-bottom: 1px solid #EDEDED;
  background: #fff;
  margin-top: 16rpx;
  border-radius: 10rpx 10rpx 0 0;
  font-size: 28rpx;
}

.integral_detail_tab {
  padding: 0 90rpx;
  display: flex;
  justify-content: space-between;
  height: 88rpx;
  background: #fff;
}

.integral_detail_tab view {
  border-bottom: 2px solid #fff;
  color: #353535;
  font-size: 28rpx;
  line-height: 88rpx;
}

.integral_detail_tab .active {
  color: #FF474C;
  border-bottom: 2px solid #FF474C;
}

/* 商品列表 */
.integral_detail_content {
  height: 100%;
  width: 100%;
}

.shop_list {
  padding: 20rpx 60rpx 0rpx 60rpx;
  margin-top: 20rpx;
  font-size: 0.8rem;
}

.shop_list:first-child {
  margin-top: 20rpx;
}

.shop_list:last-child {
  margin-bottom: 32rpx;
}

.shop_logo {
  width: 140rpx;
  height: 140rpx;
}

.shop_list_r {
  position: relative;
}

.shop_norms {
  margin-top: 8rpx;
}

.shop_integral {
  font-size: 28rpx;
  position: absolute;
  right: 0rpx;
  top: 26rpx;
  color: #353535;
  font-weight: 700;
}

.add_integral {
  color: #E51C23;
}

.reduce_integral {
  color: #666666;
}