/* pages/we/we_order/we_order.wxss */
page {
  background: #f4f4f4;
  font-family: "Microsoft YaHei";
  box-sizing: border-box;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/*tab*/
.swiper-tab-list {
  width: 20%;
}

/*列表*/
.item-block {
  width: 100%;
  box-sizing: border-box;
  font-size: 10pt;
  background-color: #fff;
  padding: 0rpx 28rpx 28rpx 20rpx;
  position: relative;
}

.clear{
  clear:both;
}
.good-title{
  width: 100%;
  overflow: hidden;
  display: flex;
  color: #353535;
  justify-content: space-between;
  align-items: center;
  height: 104rpx;
  line-height: 104rpx;
}

.good-title view {
  display: flex;
  align-items: center;
}

.shop-icon{
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-right: 8rpx;
}
.del{
  width: 32rpx;
  height: 32rpx;
  float: right;
  margin-right: 10rpx;
  position: relative;
  
}
.good-title-l{
  flex: 1;
  height: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.good-title-r{
  height: 100%;
  width: 128rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: relative;
}
.good-main{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 0rpx 0 12rpx 0;
}
.good-main-l{
  flex: 1;
  overflow: hidden;
  display: flex;
}
.good-main-r{
  width: 104rpx;
  height: 140rpx;
  overflow: hidden;
  text-align: center;
  font-size: 28rpx;
}

.good-main-r view{
  margin-top: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.good-main-r text{
  font-size: 24rpx;
  color: #999999;
  margin-top: 6rpx;
}
.good-unit{
  width: 140rpx;
  height: 140rpx;
  display: inline-block;
  text-align: center;
  margin-right: 12rpx;
  box-sizing: border-box;
  padding: 10rpx;
  overflow: hidden;
  border-radius: 10rpx;
}
.good-unit image{
  width: 120rpx;
  height: 120rpx;
}
.red{
  color: #FF474C;
}
.good-bottom{
  width: 100%;
  overflow: hidden;
  display: flex;
  color: #666;
  height: 60rpx;
  line-height: 60rpx;
  justify-content: space-between;
}
.good-bottom-l{
  font-size: 28rpx;
  color: #5B5B5B;
}
 
.good-bottom-l text {
  font-size: 32rpx;
  color: #FF474C;
}
.good-bottom-r{
  box-sizing: border-box;
  text-align: right;
}
.good-btn{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: inline-block;
  border-radius: 60rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  opacity: 1;
  position: relative;
}
.btn-red{
  background-color: #FF474C;
  color: #fff;
}
.btn-grey{
  border: 1px solid #e8e8e8;
}
.info{
  width: 100%;
  height: 50pt;
  display: flex;
}
.info-l{
  width: 140rpx;
  height: 140rpx;
  display:inline-block;
  text-align:center;
  margin-right: 20rpx;
  box-sizing:border-box;
  padding: 10rpx;
  border-radius: 10rpx;
}
.info-l image{
  width: 120rpx;
  height: 120rpx;
}
.info-r{
  flex: 1;
  height: 30pt;
  box-sizing: border-box;
  margin: 32rpx 0;
  line-height: 15pt;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  color: #101010;
}
.owner{
  background-color:#E62A1F;
  color:#fff;
  font-size:9pt;
  border-radius:2pt;
  width: 22pt;
  height: 13pt;
  line-height: 13pt;
  text-align: center;
  display: inline-block;
  float: left;
  margin-top: 8.5pt;
}
.shop-text{
  overflow: hidden;
  display: inline-block;
  float: left;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #101010;
}
.ishide{ 
  display: none;
}
.isshow{
  display: inline-block;
}

scroll-view {
  box-sizing: border-box;
}

.content {
  padding: 0 16rpx;
  overflow: hidden;
}

.merchants {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

/* 物流 */
.good-logistics {
  width: 640rpx;
  height: 160rpx;
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 0px 0rpx 40rpx 0rpx rgba(170, 170, 170, .29);
  margin: 0 auto;
  margin-bottom: 32rpx;
  padding: 40rpx 26rpx;
  box-sizing: border-box;
  position: relative;
}

.good-logistics_address {
  color: #101010;
  font-size: 26rpx;
}

.good-logistics_address image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.good-logistics_time {
  color: #999999;
  font-size: 24rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
}

.good-logistics .all {
  position: absolute;
  right: 14rpx;
  top: 56rpx;
  width: 24rpx;
  height: 24rpx;
}

/* 无订单式时的样式 */
.not_online  {
  padding: 264rpx 0;
}