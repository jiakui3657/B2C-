/* pages/we/order_cancel/order_cancel.wxss */
page {
  width: 100%;
}

.container {
  padding: 0;
  position: absolute;
  background: #f4f4f4;
  width: 100%;
  height: auto;
}

/* 订单头部 */
.header {
  height: 230rpx;
  background: #000;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  color: #fff;
  padding: 0rpx 20rpx 106rpx;
  font-size: 28rpx;
}

.header-l {
  display: flex;
  align-items: center;
}

.header image {
  width: 48rpx;
  height: 48rpx;
  display: block;
  margin-right: 8rpx
}

.header text {
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 32rpx;
}

/* 订单内容 start */

.content {
  width: 100%;
  margin-top: -106rpx;
  margin-bottom: 113rpx;
}

/* 个人信息 */
.user_info {
  background: #fff;
  width: 710rpx;
  height: 168rpx;
  display: flex;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 24rpx 32rpx 36rpx 26rpx;
}

.user_info image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.user_info .info {
  flex: 1;
}

.user_name {
  color: #101010;
  font-size: 28rpx;
}

.user_name text {
  font-weight: 600;
  margin-left: 16rpx;
}

.user_address {
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 商家信息 */
.merchants {
  background: #fff;
}

.merchants_title {
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #353535;
  height: 104rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.merchants_title .shop-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.merchants_title image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.merchants_title view {
  border-bottom: 1px solid #E6E3E3;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 24rpx;
}

/* 商品列表 */
.goods_list {
  padding: 32rpx 0rpx 0rpx 40rpx;
  display: flex;
}

.goods_list:last-child .goods_list_r {
  border: 0;
}

.goods_logo {
  width: 140rpx;
  height: 140rpx;
}

.goods_list_r {
  flex: 1;
  padding-right: 60rpx;
  border-bottom: 1px solid #DDDDDD;
  padding-bottom: 40rpx;
}

.goods_list:last-child .shop_list_r {
  border-bottom: 0px solid #DDDDDD;
}

.goods_norms {
  margin-top: 8rpx;
}

.goods_norms text:last-child {
  margin-left: 32rpx;
}

.goods_price {
  margin-top: 8rpx;
}

/* 商品金额、运费、优惠 */
.price {
  padding: 24rpx 40rpx 20rpx;
  background: #fff;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #101010;
}

.price_list {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.price_list text {
  font-size: 28rpx;
  color: #716F6F;
}

.price_total {
  text-align: right;
  margin-top: 8rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.price_total text {
  color: #FF474C;
}

.integral {
  width: 670rpx;
  height: 60rpx;
  border-radius: 60rpx;
  line-height: 60rpx;
  border: 1px solid #FF474C;
  background: #FBECED;
  padding: 0 20rpx 0 32rpx;
  box-sizing: border-box; 
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
}

.integral image {
  width: 24rpx;
  height: 24rpx;
}

.integral_l text {
  color: #FF474C;
}

.integral_r {
  color: #4D4D4D;
}

/* 订单列表 */
.order {
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  background: #fff;
}

.order_list {
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  margin-top: 8rpx;
  color: #716F6F;
  font-size: 28rpx;
}

.order_list view {
  color: #101010;
}

/* 提交按钮 */
.bottom_btn {
  padding: 16rpx 20rpx;
  background: #fff;
  text-align: right;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.bottom_btn view {
  height: 60rpx;
  line-height: 60rpx;
  width: 180rpx;
  border-radius: 60rpx;
  text-align: center;
  display: inline-block;
  position: relative
}

.heavy {
  background: #FF474C;
  color: #fff;
  font-size: 26rpx;
  margin-left: 24rpx;
}

.light {
  color: #666666;
  font-size: 26rpx;
  border: 1px solid #CECECE;
  margin-left: 24rpx;
}

/* 订单内容 end */