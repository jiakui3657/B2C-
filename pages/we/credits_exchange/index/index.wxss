/* pages/we/credits_exchange/index/index.wxss */
page {
  height: 100%;
  background: #f4f4f4;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.header {
  background: #E2BA62;
  padding: 40rpx 0 60rpx 40rpx;
  box-sizing: border-box;
}

.user_info {
  display: flex;
  justify-content: space-between;
  align-items: center
}

.user_info_l {
  display: flex;
  font-size: 28rpx;
  color: #AE7700;
}

.user_info_l image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}

.user_info_l image view view {
  width: 40rpx;
  height: 40rpx;
}

.user_info_name {
  padding-top: 16rpx;
  box-sizing: border-box;
}

.user_info_r {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-top-left-radius: 60rpx;
  border-bottom-left-radius: 60rpx;
  background: #fff;
  display: flex;
  font-size: 28rpx;
  color: #CCA66E;
  padding-left: 18rpx;
  box-sizing: border-box;
}

.user_info_r image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 12rpx;
  margin-right: 6rpx;
}

.open_vip {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  padding-left: 116rpx;
  display: flex;
  align-items: center;
}

.open_vip text {
  vertical-align: middle;
}

.open_vip image {
  width: 66rpx;
  height: 36rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

/* 积分兑换切换 */
 .table {
  width: 718rpx;
  margin: 0 auto;
  margin-top: -46rpx;
  background: #fff;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  z-index: 1;
}  

.table view {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}  

.table text {
  text-align: center;
  /* border-bottom: 3px solid #fff; */
  font-size: 28rpx;
  color: #353535;
  height: 100%;
  display: inline-block;
  box-sizing: border-box;
}

.table .active {
  border-bottom: 3px solid #CAA148;
  color: #CAA148;
}

/* 商品列表 */
scroll-view {
  padding-top: 16rpx;
  box-sizing: border-box;
}

.goods_list {
  padding: 32rpx 20rpx 32rpx 40rpx;
  background: #fff;
  position: relative;
}

.goods_list:first-child {
  margin-top: 0rpx;
}

.goods_logo {
  width: 180rpx;
  height: 180rpx;
  position: relative;
}

.goods_name {
  padding-right: 100rpx;
  height: 80rpx;
  overflow: hidden;
}

.goods_price {
  margin-top: 12rpx;
}

.goods_norms {
  margin-top: 12rpx;
  text-decoration: line-through;
  font-size: 24rpx;
  line-height: 36rpx;
}

.exchange {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  width: 176rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 26rpx;
  background: #CAA148;
}

.shadow {
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 76rpx;
}

/* 模态框 */
.modal {
  height: 456rpx;
}

.modal_title {
  text-align: left;
  padding-left: 40rpx;
  box-sizing: border-box;
  height: 104rpx;
  line-height: 104rpx;
  font-weight: 700;
  color: #353535;
}

.modal_list {
  padding-left: 40rpx;
  box-sizing: border-box;
}

.modal_list .goods_integral {
  display: inline-block;
  padding: 0 20rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background: #FF474C;
  color: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.modal_list view {
  padding: 0;
  height: auto;
  line-height: 40rpx;
  display: block;
}

.modal_list .number {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #353535;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 48rpx;
  padding-right: 40rpx;
}

.modal_list .number_transform {
  display: flex;
  align-items: center;
}

.number_transform image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 0;
}

.number_transform input {
  width: 40rpx;
  height: 24rpx;
  text-align: center;
  line-height: 24rpx;
  margin: 0 12rpx;
  font-size: 24rpx;
  color: #606266;
}

.modal_btn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  height: 94rpx;
  line-height: 94rpx;
  color: #fff;
  background: #FF474C;
  font-size: 36rpx;
}
