/* pages/we/credits_exchange/change/change.wxss */
page {
  height: 100%
}
.container {
  padding: 0;
  overflow: hidden;
  padding-bottom: 108rpx;
  min-height: 100%;
}

/* 个人信息 */
.user_info {
  background: #fff;
  display: flex;
  box-sizing: border-box;
  padding: 32rpx 110rpx 32rpx 40rpx;
  position: relative;
}

.user_info image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.user_info .info {
  flex: 1;
}

.user_name {
  color: #353535;
  font-size: 28rpx;
}

.user_name text {
  margin-left: 8rpx;
}

.user_address {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 30rpx;
}

.logistics_more {
  position: absolute;
  right: 40rpx;
  top: 50%;
  margin-top: -15rpx;
  width: 30rpx;
  height: 30rpx;
}

/* 无地址状态 */
.no_address {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 0;
  background: #fff;
}

.no_address view {
  width: 520rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #FF474C;
  border-radius: 70rpx;
  border: 1px solid #FF474C;
  box-sizing: border-box;
}

/* 商品列表 */
.goods_list {
  padding: 32rpx 20rpx 32rpx 40rpx;
  background: #fff;
  position: relative;
}

.goods_list:first-child {
  margin-top: 0rpx;
}

.goods_logo {
  width: 180rpx;
  height: 180rpx;
  position: relative;
}

.goods_name {
  padding-right: 100rpx;
  height: 80rpx;
  overflow: hidden;
}

.goods_price {
  margin-top: 12rpx;
}

.goods_norms {
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 36rpx;
}

/* 兑换按钮 */
.bottom_btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
  color: #fff;
  font-size: 36rpx;
  background: #FF474C;
}