/* pages/we/refund/edit_info/edit_info.wxss */
page{
  height: 100%
}
.container {
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  padding: 0;
}

.content {
  padding: 0 20rpx;
  background: #fff;
}

.list{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  border-bottom: 1px solid #EDEDED;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.list input {
  color: #504F50;
  height: 80rpx;
  font-size: 26rpx;
}

.list view {
  color: #353535;
}

.placeholder {
  color: #D2D2D2;
  font-size: 28rpx;
}

.list-l {
  width: 130rpx;
  color: #353535;
  margin-right: 90rpx;
}

.list-r {
  flex: 1;
}

.code {
  display: flex;
  justify-content: space-between
}

.code text {
  display: inline-block;
  width: 210rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 70rpx;
  background: #0F0D0D0D;
  color: #3E3D3D;
  text-align: center;
  font-size: 28rpx;
  margin-top: 26rpx;
}

.list:last-child {
  border-bottom: 0;
}

button {
  width: 640rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  background: #FF474C;
  border-radius: 94rpx;
  margin: 80rpx auto;
  border: 0;
  padding: 0;
}
