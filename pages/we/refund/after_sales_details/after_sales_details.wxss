/* pages/we/after_sales_details/after_sales_details.wxss */
page {
  height: 100%;
}

.container {
  padding: 0;
  overflow: hidden;
  padding-bottom: 120rpx;
  min-height: 100%;
}

/* 商品 */
.goods {
  padding: 32rpx 40rpx;
  display: flex;
  background: #fff;
  overflow: hidden;
}

.goods_logo {
  width: 180rpx;
  height: 180rpx;
}

.goods_r {
  flex: 1;
  position: relative;
}

.goods_norms {
  margin-top: 16rpx;
}

.goods_norms text:last-child {
  margin-left: 32rpx;
}

/* 退货原因 */
.return_why {
  padding: 32rpx 40rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
}

.return_why_l {
  font-size: 24rpx;
  color: #888888;
}

.return_why_l view {
  margin-top: 8rpx;
  height: 32rpx;
  line-height: 32rpx;
}

.return_why_title {
  font-size: 28rpx;
  font-weight: 900;
  color: #000;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 0;
}

.return_why_r {
  font-size: 24rpx;
  color: #353535;
  padding-top: 20rpx;
}

.return_why_r image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 8rpx;
  vertical-align: middle;
}

.return_why_r text {
  vertical-align: middle;
}

/* 描述 */
.describe {
  background: #fff;
  box-sizing: border-box;
  padding: 0rpx 40rpx 32rpx;
  position: relative;
}

.describe view {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 28rpx;
  font-weight: 900;
}

textarea {
  font-size: 24rpx;
  color: #101010;
  height: 280rpx;
  width: 100%;
  background-color: #F4F4F4;
  padding: 20rpx;
  box-sizing: border-box;
}

.placeholder {
  font-size: 24rpx;
  color: #888888;
}

.describe text {
  position: absolute;
  bottom: 60rpx;
  right: 68rpx;
  font-size: 28rpx;
  color: #888888;
}

/* 上传凭证 */
.voucher {
  background: #fff;
  padding: 32rpx 40rpx;
}

.voucher .voucher_num {
  margin-bottom: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #888888;
  font-size: 24rpx;
}

.voucher_title {
  font-size: 28rpx;
  font-weight: 900;
  height: 40rpx;
  line-height: 40rpx;
}

.voucherList {
  display: flex;
  flex-flow: wrap;
}

.voucherList view {
  width: 160rpx;
  height: 160rpx;
  margin-right: 10rpx;
  position: relative;
  margin-top: 8rpx;
}

.voucherList image {
  width: 100%;
  height: 100%;
}

.voucherList view:nth-child(4n) {
  margin-right: 0rpx;
}

.voucherList .del {
  position: absolute;
  right: -8rpx;
  top: -8rpx;
  width: 30rpx;
  height: 30rpx;
}

.bottom_btn {
  height: 100rpx;
  background: #FF474C;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  width: 100%;
}

/* 模态框 */
.modal {
  display: flex;
  flex-direction: column;
}

.modal_title {
  height: 104rpx;
  font-size: 32rpx;
  color: #101010;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal_list {
  flex: 1;
  overflow: auto;
  padding: 0 36rpx;
  box-sizing: border-box;
}

.modal_list view {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  color: #101010;
  font-size: 28rpx;
}

.modal_list image {
  width: 40rpx;
  height: 40rpx;
  display: block;
}

.modal_btn {
  height: 94rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #F9464A;
  color: #fff;
  font-size: 36rpx;
}