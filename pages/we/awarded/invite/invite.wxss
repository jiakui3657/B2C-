/* pages/we/awarded/invite/invite.wxss */

/* header */
.header {
  height: 650rpx;
  position: relative;
}

.header image {
  width: 100%;
  height: 100%;
  background: red;
}

.activity_title {
  position: absolute;
  top: 180rpx;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
}

.activity_title view {
  height: 108rpx;
  line-height: 108rpx;
  color: #E14045;
  font-size: 72rpx;
  font-weight: 700;
}

.activity_title text {
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  margin-top: 8rpx;
}

.rules_name {
  position: absolute;
  top: 30rpx;
  right: 0;
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  border-radius: 40rpx 0 0 40rpx;
  background: rgba(255, 255, 255, .2);
}

.staff {
  position: absolute;
  top: 30rpx;
  left: 20rpx;
  width: 304rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: rgba(0, 0, 0, .3);
  border-radius: 52rpx;
  color: #fff;
  text-align: center;
  font-size: 22rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
}

swiper {
  height: 100%;
}

swiper-item {
  height: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.container {
  overflow: hidden;
  padding-bottom: 108rpx;
}

/* 邀请攻略 */
.strategy {
  background: #fff;
  padding: 32rpx 20rpx;
  box-sizing: border-box;
}

.title {
  color: #353535;
  font-size: 32rpx;
  text-align: center;
  height: 48rpx;
  line-height: 48rpx;
  font-weight: 700;
  margin-bottom: 32rpx;
}

.strategy_process {
  margin-top: 32rpx;
  display: flex;
  justify-content: space-between;
}

.process_list {
  text-align: center;
  position: relative;
}

.process_list:after {
  content: "";
  position: absolute;
  top: 30rpx;
  left: 130rpx;
  width: 156rpx;
  height: 1rpx;
  background: #F94929;
}

.process_list:last-child:after {
  display: none;
}

.process_num {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50%;
  width: 60rpx;
  border: 1px solid #F94929;
  text-align: center;
  font-size: 32rpx;
  color: #353535;
  margin: 0 auto;
}

.process_name {
  font-size: 26rpx;
  color: #353535;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 16rpx;
}

.process_title {
  font-size: 22rpx;
  color: #999;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 8rpx;
}

/* 邀请好友排行榜 */
.friends {
  background: #fff;
  padding: 32rpx 20rpx;
  box-sizing: border-box;
}

.friends_list {
  display: flex;
  font-size: 24rpx;
  color: #353535;
  align-items: center;
  margin-bottom: 32rpx;
}

.friends_list:first-child {
  margin-top: 32rpx;
}

.friends_list:last-child {
  margin-bottom: 0rpx;
}

.friends_list image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}

.friends_name {
  line-height: 40rpx;
  height: 40rpx;
}

.friends_num {
  line-height: 40rpx;
  height: 40rpx;
  color: #999;
}

.ranking {
  margin-right: 16rpx;
}

.first {
  color: #FF9800;
}

.two {
  color: #009688;
}

.three {
  color: #F94929;
}

/* 邀请按钮 */
.bottom_btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
  color: #fff;
  font-size: 36rpx;
  background: #FF474C;
  padding: 0;
  border: 0;
  border-radius: 0;
}

/* 规则弹框 */
.mask {
  display: block;
}

.rules {
  position: fixed;
  left: 50%;
  top: 50%;
  width: 640rpx;
  height: 900rpx;
  margin-left: -320rpx;
  margin-top: -450rpx;
  background: #fff;
  z-index: 1111;
  box-sizing: border-box;
  padding: 32rpx;
  color: #353535;
  display: flex;
  flex-direction: column;
}

.rules_title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-bottom: 32rpx;
  font-size: 36rpx;
  font-weight: 700;
}

.rules_note {
  line-height: 44rpx;
  font-size: 28rpx;
  flex: 1;
  overflow: auto;
}

.rules_note scroll-view {
  height: 100%
}

.del {
  position: absolute;
  right: 0rpx;
  top: -70rpx;
  width: 48rpx;
  height: 48rpx;
}

/* 邀请为空的样式 */
.not_online {
  padding: 264rpx 0;
}