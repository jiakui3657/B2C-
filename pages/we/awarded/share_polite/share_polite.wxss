/* pages/we/awarded/share_polite/share_polite.wxss */
page {
  height: 100%;
  background: #f4f4f4;
}

/* header */
.header {
  height: 480rpx;
  position: relative;
}

.header image {
  width: 100%;
  height: 100%;
}

.header_content {
  padding: 12rpx;
  width: 606rpx;
  height: 248rpx;
  background: rgba(255, 255, 255, .3);
  margin: 32rpx auto;
  position: absolute;
  left: 50%;
  top: 32rpx;
  margin-left: -303rpx;
  box-sizing: border-box;
}

.header_note {
  width: 100%;
  height: 100%;
  border: 1px dashed rgba(255, 255, 255, .3);
  box-sizing: border-box;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.invitation_number {
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 52rpx;
}

.invitation_number text {
  font-size: 72rpx;
  font-weight: 700;
}

.invitation_record {
  padding: 20rpx 0;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center
}

.invitation_record image {
  width: 20rpx;
  height: 20rpx;
}

/* 分享流程 */
.share_process {
  width: 710rpx;
  position: absolute;
  margin-top: -148rpx;
  left: 20rpx;
  background: #fff;
  padding: 32rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  z-index: 111;
}

.process_list {
  width: 170rpx;
  text-align: center;
}

.process_logo {
  width: 80rpx;
  height: 80rpx;
  position: relative;
  margin: 0 auto;
}

.process_logo image {
  border-radius: 80rpx;
  width: 100%;
  height: 100%;
}

.process_logo text {
  width: 120rpx;
  height: 1rpx;
  background: #F9A799;
  display: inline-block;
  position: absolute;
  left: 110rpx;
  top: 40rpx;
}

.process_text {
  line-height: 40rpx;
  color: #353535;
  font-size: 24rpx;
  margin-top: 16rpx;
}

.container {
  padding: 0;
  position: relative;
  top: 93rpx;
}

/* 分享商品 */
.share_shop {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #353535;
  background: #fff;
  padding: 32rpx 40rpx;
  box-sizing: border-box;
  text-align: center
}

.share_shop image {
  width: 300rpx;
  height: 150rpx;
  display: block;
}

.shop_title {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 16rpx;
}

.shop_number {
  height: 36rpx;
  line-height: 36rpx;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #FF474C;
}

/* 分享规则 */
.share_rules {
  background: #fff;
  box-sizing: border-box;
  padding: 32rpx 40rpx;
}

.rules_title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 40rpx;
  color: #F94929;
}

.rules_list {
  margin-top: 32rpx;
  display: flex;
  align-items: baseline;
}

.rules_list text {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 28rpx;
  background: #F94929;
  margin-right: 16rpx;
  display: inline-block;
  text-align: center;
}

.rules_list view {
  line-height: 40rpx;
  color: #353535;
  font-size: 24rpx;
  flex: 1;
}