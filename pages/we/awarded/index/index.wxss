page{
  height: 100%;
  background: #f4f4f4;
}

.container {
  width: 710rpx;
  margin: 0 auto;
  margin-top: -140rpx;
  padding: 0
}

.integral-info{
  position: relative;
  height: 480rpx;
  width: 100%;
  overflow: hidden;
  background-size: cover;
}
.integral-bg{
  width: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.integral-rule{
  position: absolute;
  right: 0;
  top: 20rpx;
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  width: 120rpx;
  border-radius: 36rpx 0px 0px 36rpx;
  background: #FA6D54;
  text-align: center;
  font-size: 24rpx;
}

/* 签到 */
.integral {
  margin: 90rpx auto;
  height: 160rpx;
  width: 160rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 160rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #F94929;
  justify-content: center;
}

.integral text {
  display: inline-block;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
}

.integral view {
  height: 32rpx;
  line-height: 32rpx;
  font-size: 36rpx;
  margin-top: 8rpx;
}

/* 气泡 */
.bubble {
  position: absolute;
  text-align: center;
}

.bubble view {
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 60rpx;
  background: #fff;
  font-size: 28rpx;
  color: #F94929;
}

.bubble text {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 22rpx;
  color: #fff;
}

.share {
  top: 70rpx;
  left: 90rpx;
}

.sign {
  left: 180rpx;
  top: 200rpx;
}

.shop {
  right: 72rpx;
  top: 140rpx;
}

.sign-wrap {
  border-radius: 10rpx;
}

.sign-box{
  position: relative;
  height: 272rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx 20rpx 32rpx 20rpx;
}
.sign-tip{
  font-weight: bold;
  font-size: 28rpx;
  color: #000;
  line-height: 60rpx;
}
.sign-tip2{
  font-size: 24rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.sign-tip .font-red{
  font-size: 32rpx;
}
.sign-reminder{
  position: absolute;
  right:20rpx;
  top: 30rpx;
  font-size: 24rpx;
  color: #888
}

.sign-reminder switch{
  margin-left: 8rpx;
  display: inline-block;
  zoom: .6;
}

.sign-line{
  margin-left: -16rpx;
  display: flex;
  font-size: 24rpx;
  color: #fff;
  white-space: nowrap;
}
.sign-item{
  display: inline-block;
  position: relative;
  text-align: center;
}

.sign-item:last-child .line {
  display: none
}

.sign-item .icon-box{
  width: 100rpx;
}
.sign-item .icon{
  position: relative;
  z-index: 3;
  height: 50rpx;
  width: 50rpx;
  margin: 0 auto;
  line-height: 50rpx;
  border-radius: 25rpx;
  background: #d2d2d2;
}

.sign-item image{
  position: absolute;
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  left: 0;
  top: 0;
  display: none
}

.current-icon .item-text {
  background: #F94929;
  border-radius: 50%;
}

.current-icon image {
  display: block;
}

.current-icon .icon {
  background: transparent;
}

.sign-item .date{
  font-size: 18rpx;
  color: #888;
  height: 26rpx;
  line-height: 26rpx;
  margin-top: 16rpx;
}
.sign-item .line{
  height: 2rpx;
  width: 70rpx;
  background: #cecece;
  position: absolute;
  left: 70rpx;
  top: 24rpx;
}
.sign-item .line.left{
  left: 0;
}

.activity-wrap{
  display: flex;
  flex-flow: wrap;
  background: #fff;
}

.activity-wrap image {
  width: 50%;
  height: 280rpx;
  box-sizing: border-box;
}

.activity-wrap image:nth-child(1){
  border-right: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
}
.activity-wrap image:nth-child(2){
  border-bottom: 1rpx solid #ededed;
}
.activity-wrap image:nth-child(3){
  border-right: 1rpx solid #ededed;
}

/* 商品列表 */
.goods_title {
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  margin: 20rpx 0;
  color: #444444;
  font-weight: 900;
}

.goodsList {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

/* 规则弹框 */
.mask {
  display: block;
}

.rules {
  position: fixed;
  left: 50%;
  top: 50%;
  width: 640rpx;
  height: 900rpx;
  margin-left: -320rpx;
  margin-top: -450rpx;
  background: #fff;
  z-index: 1111;
  box-sizing: border-box;
  padding: 32rpx;
  color: #353535;
  display: flex;
  flex-direction: column;
}

.rules_title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-bottom: 32rpx;
  font-size: 36rpx;
  font-weight: 700;
}

.rules_note {
  line-height: 44rpx;
  font-size: 28rpx;
  flex: 1;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.rules_note scroll-view {
  height: 100%
}

.del {
  position: absolute;
  right: 0rpx;
  top: -70rpx;
  width: 48rpx;
  height: 48rpx;
}

/* 领劵提示 */
.securities {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 630rpx;
  height: 830rpx;
  margin-left: -315rpx;
  margin-top: -415rpx;
  z-index: 111
}

.securities image {
  width: 100%;
  height: 100%;
}

.securities_content {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  color: #F94929;
}

.securities_title {
  margin-top: 190rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 32rpx;
}

.securities_money {
  margin-top: 6rpx;
  height: 166rpx;
  line-height: 166rpx;
  font-size: 72rpx;
}

.securities_money text {
  font-weight: 700;
  font-size: 112rpx;
}

.securities_rules {
  margin-top: 82rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  font-size: 28rpx;
}

.securities_btn {
  margin-top: 40rpx;
  font-weight: 700;
  font-size: 40rpx;
  height: 90rpx;
  display: inline-block;
  background: transparent;
  width: 100%;
  color: #F94929;
  display: flex;
  align-items: center;
  justify-content: center;
}

.securities_time {
  color: #F9E69B;
  margin-top: 48rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}

.securities .securities_del {
  position: absolute;
  bottom: -96rpx;
  left: 50%;
  margin-left: -24rpx;
  width: 48rpx;
  height: 48rpx;
}