/* pages/we/awarded/friends/friends.wxss */

page {
  height: 100%;
}

.container {
  min-height: 100%;
  padding: 0;
}

/* 标题栏 */
.header {
  height: 480rpx;
  position: relative;
  box-sizing: border-box;
}

.header image {
  width: 100%;
  height: 100%;
}

.header .title {
  position: absolute;
  left: 0;
  top: 0;
}

/* 内容 */
.content {
  position: relative;
  top: -100rpx;
  height: 514rpx;
  background: rgba(0, 0, 0, .21);
  overflow: hidden
}

/* 劵 */
.securities {
  background: #fff;
  width: 710rpx;
  height: 244rpx;
  margin: 48rpx auto;
  display: flex;
}

.securities_l {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 96rpx;
  color: #F94929;
  font-weight: 700;
}

.securities_l view {
  display: flex;
  align-items: center;
}

.securities_l text {
  font-size: 28rpx;
}

.securities_r {
  height: 100%;
  width: 50%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  font-size: 28rpx;
  color: #F94929;
}

.name {
  font-size: 32rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #353535;
  font-weight: 700;
}

.condition {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 16rpx;
}

.time {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 16rpx;
  color: #999;
  font-size: 22rpx;
}

.bottom_btn {
  width: 320rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #F94929;
  font-size: 32rpx;
  color: #fff;
  border-radius: 80rpx;
  margin: 0 auto;
}

/* 新人规则 */
.rules {
  background: #fff;
  box-sizing: border-box;
  padding: 32rpx 40rpx 48rpx 40rpx;
  position: relative;
  top: -160rpx;
}

.rules_title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 40rpx;
  color: #F94929;
}

.rules_list {
  margin-top: 32rpx;
  display: flex;
  align-items: baseline;
}

.rules_list text {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 28rpx;
  background: #F94929;
  margin-right: 16rpx;
  display: inline-block;
  text-align: center;
}

.rules_list view {
  line-height: 40rpx;
  color: #353535;
  font-size: 24rpx;
  flex: 1;
}

/* 商品推荐 */
.recommend {
  width: 100%;
  padding: 0 16rpx;
  box-sizing: border-box;
  margin-top: -160rpx;
}

.goods_title {
  height: 48rpx;
  text-align: center;
  margin: 20rpx 0;
  color: #444444;
  font-weight: 900;
}

.goodsList {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}