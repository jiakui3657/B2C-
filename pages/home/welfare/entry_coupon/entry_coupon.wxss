/* pages/home/entry_coupon/entry_coupon.wxss */

page {
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.container {
  background: #FF474C;
  flex: 1;
  overflow: auto;
}

/* 个人信息 */
.user_info {
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}

.user_info image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 32rpx;
}

.user_info .name {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 8rpx;
}

.user_info view:last-child {
  font-size: 24rpx;
  height: 36rpx;
  line-height: 36rpx;
}

/* 分享内容 */
.share_content {
  height: 610rpx;
  margin-top: 32rpx;
  position: relative;
}

.share_content image {
  width: 100%;
  height: 100%;
}

.content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content_t {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #353535;
  font-size: 32rpx;
}

/* 分享商品 */
.coupon {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.coupon image {
  width: 120rpx;
  height: 120rpx;
  margin-top: 24rpx;
}

.coupon_condition {
  display: flex;
  color: #FF474C;
  font-size: 24rpx;
  align-items: center;
}

.coupon_condition view {
  font-weight: 700;
  display: flex;
  align-items: center;
  margin-right: 16rpx;
}

.coupon_condition view text {
  font-size: 56rpx;
}

/* 分享劵 */
.securities {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.securities_name {
  height: 48rpx;
  line-height: 48rpx;
  margin-top: 36rpx;
}

.securities_money {
  margin-top: 32rpx;
  font-size: 108rpx;
  color: #FF474C;
  font-weight: 700;
  display: flex;
  align-items: center;
  height: 124rpx;
  line-height: 124rpx;
}

.securities_money text {
  font-size: 24rpx;
}

.securities_condition {
  font-size: 24rpx;
  color: #FF474C;
  margin-top: 16rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.securities_time {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
}

.securities_time text {
  color: #999;
  margin-top: 16rpx;
}

.content_b {
  height: 230rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
}

.receive_btn {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  text-align: center;
  width: 360rpx;
  background: #FF474C;
  color: #fff;
  margin-top: 28rpx;
}

.receive_all {
  margin-top: 48rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #FF474C;
}

/* 推荐商品 */
.recommend {
  background: #FF474C;
}

.goods_title {
  height: 48rpx;
  text-align: center;
  margin: 20rpx 0;
  color: #fff;
  font-weight: 900;
}