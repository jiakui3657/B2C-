page {
  height: 100%;
}

.container{
  text-align: center;
  font-size: 28rpx;
  min-height: 100%;
}

.tip-wrap{
    padding: 80rpx 0 60rpx;
    background: #fff;
}
.tip-title{
    padding-left: 36%;
    font-size: 36rpx;
    color: #FF474C;
    line-height: 50rpx;
    margin-bottom: 16rpx;
    font-weight: 700;
}
.tip-price .font-red{
    font-weight: bold;
}
.tip-icon{
    height: 50rpx;
    width: 50rpx;
    margin-right: 8rpx;
}
.tip-btns{
    margin-top: 60rpx;
    display: flex;
    justify-content: space-around;
    padding: 0 80rpx;
}
.tip-btns .btn-item{
    width: 220rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 100rpx;
    background-color: #FF474C;
    color: #fff;
    font-size: 26rpx;
}

/* 商品列表 */
.goods_title {
  text-align: center;
  margin: 20rpx 0;
  color: #353535;
  font-weight: 900;
  height: 48rpx;
  line-height: 48rpx;
}

/* 优惠券 */
.coupons {
  position: fixed;
  z-index: 111;
  left: 50%;
  top: 200rpx;
  background: #fff;
  width: 600rpx;
  height: 472rpx;
  border-radius: 10rpx;
  margin-left: -300rpx;
  padding: 48rpx 0rpx;
  box-sizing: border-box;
}

.coupons_info {
  height: 200rpx;
  width: 480rpx;
  margin: 0 auto;
  position: relative;
}

.coupons_info image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: block;
  z-index: -1;
}

.coupons_note {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #FF474C;
  display: flex;
  justify-content: center;
  align-items: center;
}

.coupons_info_l {
  display: flex;
  font-size: 96rpx;
  align-items: center;
  margin-right: 8rpx;
  font-weight: 700;
}

.coupons_info_l text {
  font-size: 36rpx;
  font-weight: 400;
}

.coupons_info_r {
  display: flex;
  flex-direction: column;
}

.coupons_info_r view {
  height: 40rpx;
  display: flex;
  align-items: center;
}

.coupons_info_r view:last-child {
  color: #888888;
}

.coupons_title {
  height: 40rpx;
  display: flex;
  align-items: center;
  margin: 32rpx 0;
  font-size: 28rpx;
  color: #353535;
  justify-content: center
}

.coupons button {
  width: 340rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: #FF474C;
  font-size: 28rpx;
  padding: 0;
  margin: 0 auto;
}

.coupons_del {
  position: absolute;
  bottom: -108rpx;
  left: 50%;
  width: 48rpx;
  height: 48rpx;
  margin-left: -24rpx;
}