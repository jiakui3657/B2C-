/* pages/cart/index/index.wxss */
page {
  height: 100%;
}

.container {
  min-height: 100%;
}

/* 商家信息 */
.merchant {
  padding: 20rpx 0 30rpx 20rpx;
  background: #fff;
  overflow: hidden;
}

.merchant_name {
  font-size: 28rpx;
  color: #101010;
  margin-bottom: 10rpx;
  display: flex;
}

.merchant_name text {
  vertical-align: middle;
}

.check_all {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
  vertical-align: middle;
}

.merchant_logo {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.platform_logo {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.merchant_activity {
  height: 64rpx;
  line-height: 64rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  align-items: center;
}

.merchant_activity_r {
  color: #66A2CD;
  padding-right: 20rpx;
}

.merchant_activity_r text {
  vertical-align: middle;
}

.merchant_activity image {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
}

.merchant_activity_l {
  color: #999999;
}

.merchant_activity_l text {
  width: 60rpx;
  height: 28rpx;
  display: inline-block;
  border-radius: 28rpx;
  background: #FF9800;
  color: #fff;
  line-height: 28rpx;
  text-align: center;
  font-size: 18rpx;
  margin-right: 16rpx;
}

/* 商品列表 */
.goods_list {
  display: flex;
  justify-content: space-between;
  width: 100%;
  position: relative;
  transition: right .3s;
}

.goods_l {
  display: flex;
  justify-content: space-between;
  flex: 1;
  padding: 24rpx 0 0 0rpx;
  position: relative;
  width: 100%;
}

.goods_r {
  display: flex;
  justify-content: space-between;
  width: 320rpx;
  position: absolute;
  top: 0;
  right: -320rpx;
  height: 100%;
}

.goods_r view {
  width: 160rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  height: 100%;
}

.goods_r view text {
  display: block;
  width: 100%;
}

.goods_r view:first-child {
  background: #FF9800;
  padding-top: 70rpx;
  box-sizing: border-box;
}

.goods_r view:last-child {
  background: #FF474C;
  line-height: 220rpx;
}

.goods_list_l {
  display: flex;
}

.goods_uncheck {
  width: 40rpx;
  height: 40rpx;
  margin-right: 32rpx;
  margin-top: 54rpx;
}

.goods_logo {
  width: 120rpx;
  height: 120rpx;
  padding: 0
}

.goods_list_r {
  flex: 1;
  font-size: 28rpx;
  padding: 0 20rpx 32rpx 0;
  border-bottom: 1px solid #E0E0E0;
  box-sizing: border-box;
}

.goods_name {
  display: block;
  color: #101010;
}

.goods_weight {
  font-size: 20rpx;
  color: #353535;
  display: flex;
  margin-top: 24rpx;
}

.goods_weight view {
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 36rpx;
  background: #F4F4F4;
  padding: 0 16rpx;
}

.goods_weight image {
  width: 18rpx;
  height: 18rpx;
  margin-left: 16rpx;
}

.goods_price {
  color: #FF474C;
  margin-top: 24rpx;
}

.goods_measure {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  display: flex;
  align-items: center;
}

/* 商家结算 */
.goods_close {
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
  padding-right: 20rpx;
}

.goods_total_btn {
  width: 140rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  background: #FF474C;
  font-size: 26rpx;
  color: #fff;
  border-radius: 60rpx;
}

.goods_total {
  font-size: 28rpx;
  color: #101010;
}

.goods_total text {
  color: #FF474C;
  font-weight: 700;
}

.rest_prompt {
  display: none;
}

.mask_active {
  display: block;
}

.rest .goods_total_btn {
  background: #D2D2D2;
}

.rest .rest_prompt {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 94rpx;
  height: 40rpx;
  background: #FF474C;
  color: #fff;
  font-size: 22rpx;
  border-radius: 40rpx;
  margin-left: 24rpx;
}

/* 规格 */
.modal_active {
  bottom: 0rpx;
}

.munit_info {
  padding: 40rpx 20rpx 40rpx 40rpx;
  flex: 1;
  font-size: 28rpx;
  color: #101010;
  position: relative;
}

.munit_shop {
  display: flex
}

.munit_shop image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
}

.munit_shop text {
  color: #FF474C;
  margin-top: 124rpx;
  font-weight: 900;
}

.munit_taste {
  margin-top: 40rpx;
}

.munit_weight {
  margin-top: 60rpx;
}

.munit_note {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
}

.munit_note text {
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 16rpx;
  color: #353535;
  border: 1rpx solid #F4F4F4;
  margin-right: 32rpx;
  border-radius: 48rpx;
  background: #F4F4F4;
}

.munit_note .munit_text_active {
  color: #FF474C;
  border: 1rpx solid #FF474C;
  background: #FBECED;
}

.close {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 40rpx;
}

.munit_btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #FF474C;
  color: #fff;
  font-size: 28rpx;
}

.goods_title {
  height: 48rpx;
  text-align: center;
  margin: 20rpx 0;
  color: #444444;
  font-weight: 900;
}

/* 失效商品 */
.failure .goods_list:last-child .goods_list_r {
  border-bottom: 0;
}

/* 失效商品头部 */
.failure {
  padding: 0;
}

.failure .goods_list {
  opacity: .5
}

.failure_title {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #101010;
  padding: 24rpx 20rpx 24rpx 32rpx;
  border-bottom: 1px solid #E0E0E0;
  align-items: center;
}

.failure_title text {
  width: 220rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  border: 1px solid #BBBBBB;
  border-radius: 60rpx;
}

.failure .goods_list {
  padding-left: 12rpx;
  margin-bottom: 32rpx
}

.failure .goods_list:last-child {
  margin-bottom: 0rpx
}

.failure .goods_list:nth-child(2) {
  margin-top: 32rpx;
}

.failure .goods_price {
  margin-top: 50rpx;
}

.failure .goods_list_l text {
  display: inline-block;
  width: 70rpx;
  height: 40rpx;
  border-radius: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
  background: #CECECE;
  font-size: 24rpx;
  margin-right: 8rpx;
  margin-top: 50rpx;
}

/* 购物车 --- 空 */
.not_online {
  background: #fff;
}

/* 购物车终点 */
.target {
  position: fixed;
  bottom: -160rpx;
  right: 20%;
  width: 20%;
  height: 160rpx;
  background: red;
}